{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "noEmit": false,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "outDir": "./src",
        "preserveConstEnums": true,
        "pretty": true,
        "removeComments": true,
        "rootDir": "./tsrc",
        "noImplicitAny": false,
        "sourceMap": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "strictNullChecks": true
    },
    "include": [
        "tsrc/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}